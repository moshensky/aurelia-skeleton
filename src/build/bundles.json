{
  "bundles": {
    "dist/app-build": {
      "includes": [
        "[**/*]",
        "**/*.html!text",
        "*.css!text"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    },
    "dist/aurelia": {
      "includes": [
        "aurelia-animator-css",
        "aurelia-bootstrapper",
        "aurelia-dialog",
        "aurelia-dialog/**/*.html!text",
        "aurelia-dialog/**/*.css!text",
        "aurelia-fetch-client",
        "aurelia-framework",
        "aurelia-history-browser",
        "aurelia-i18n",
        "aurelia-loader-default",
        "aurelia-logging-console",
        "aurelia-router",
        "aurelia-templating-binding",
        "aurelia-templating-resources",
        "aurelia-templating-router",
        "aurelia-validation",
        "aurelia-validation/resources/bg-BG",
        "bootstrap",
        "bootstrap/css/bootstrap.css!text",
        "moshensky/aurelia-bs-grid",
        "moshensky/aurelia-bs-grid/**/*",
        "moshensky/aurelia-bs-grid/**/*.html!text",
        "moshensky/aurelia-bs-grid/**/*.css!text",
        "aurelia-custom-common-files",
        "aurelia-custom-common-files/**/*",
        "aurelia-custom-common-files/**/*.html!text",
        "aurelia-custom-common-files/**/*.css!text",
        "service",
        "service/**/*",
        "service/**/*.css!text",
        "text",
        "select2/css/select2.css!text",
        "bluebird",
        "Eonasdan/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css!text",
        "moment/locale/bg.js",
        "font-awesome/css/font-awesome.css!text",
        "CodeSeven/toastr/build/toastr.min.css!text"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    }
  }
}

